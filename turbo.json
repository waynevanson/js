{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["format", "^build"],
      "outputs": ["dist/"]
    },
    "release": {
      "cache": false,
      "dependsOn": ["build", "^release"],
      "env": ["GITHUB_TOKEN", "GH_TOKEN", "NPM_TOKEN", "NODE_AUTH_TOKEN"]
    },
    "format": {},
    "lint": {
      "dependsOn": ["format"]
    }
  }
}
